<h1>Edit tracker</h1>
<form accept-charset="UTF-8" action="/trackers/<%= @tracker.id %>" method="post">
  <input type="hidden" name="_method" value="put"/>
  <div>
    <label for="tracker_name">Name</label><br />
    <input type="text" size="30" id="tracker_name" name="tracker[name]" value="<%= @tracker.name %>" />
  </div>
  <div>
    <label for="tracker_url">URL</label><br />
    <input type="text" size="60" id="tracker_url" name="tracker[url]" value="<%= @tracker.url %>" />
  </div>
  <div>
    <label for="tracker_query">Query</label><br />
    <input type="text" size="60" id="tracker_query" name="tracker[query]" value="<%= @tracker.query %>" />
  </div>
  <input type="submit" value="Update" />
</form>